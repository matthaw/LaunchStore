{% extends "layout.njk" %}
{% import "parts/card.njk" as card %}

{% block content %}
  {% call card.render('Esqueceu a senha', 'password container form') %}
  <form method="POST" action="/users/forgot-password">
    <div class="fields">
      <div class="item">
        <div>e-mail</div>
        <div class="input">
          <input type="email" name="email" placeholder="Digite o e-mail cadastrado" onblur="Validate.apply(this, 'isEmail')">
        </div>
      </div>
    </div>
    <button class="button" type="submit">Recuperar a Senha</button>
  </form>
  {% endcall %}
{% endblock %}